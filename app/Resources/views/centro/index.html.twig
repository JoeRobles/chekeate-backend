{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Centro list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Direccion</th>
                <th>Telefono</th>
                <th>Horarioatencion</th>
                <th>Linkwebsite</th>
                <th>Imagen</th>
                <th>Latitud</th>
                <th>Longitud</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for centro in centros %}
            <tr>
                <td><a href="{{ path('centro_show', { 'id': centro.id }) }}">{{ centro.id }}</a></td>
                <td>{{ centro.nombre }}</td>
                <td>{{ centro.direccion }}</td>
                <td>{{ centro.telefono }}</td>
                <td>{{ centro.horarioatencion }}</td>
                <td>{{ centro.linkwebsite }}</td>
                <td>{{ centro.imagen }}</td>
                <td>{{ centro.latitud }}</td>
                <td>{{ centro.longitud }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('centro_show', { 'id': centro.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('centro_edit', { 'id': centro.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('centro_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
